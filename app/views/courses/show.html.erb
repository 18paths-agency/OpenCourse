<div class="tracks">
	<h1><strong><%= @course %></strong></h1>
	<h3>
	<p>
		<%= @course.tracks.count %> Tracks
	</p>
	
	<ul>
		<% @course.tracks.each do |track| %>			
		<li>
			<%= link_to track.title, "/courses/#{@course.id}/tracks/#{track.id}" %> track
			<ul>
				<% track.lessons.each do |lesson| %>
				<li>
					Lesson: <%= link_to lesson.title, "/courses/#{@course.id}/lessons/#{lesson.id}" %>
				</li>
				<% end %>
			</ul>
		</li>

		<% end %>
	</ul>
	</h3>
	
</div>